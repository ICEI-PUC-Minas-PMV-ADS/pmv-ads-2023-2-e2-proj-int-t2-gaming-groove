@model GamingGroove.Views.ExplorarPage.ExplorarPageViewModel


@using System.Security.Claims

@{
    ViewData["Title"] = "EquipePage";
}

<title>PÃ¡gina de Equipes</title>
<link rel="stylesheet" href="~/css/ExplorarPage.css" asp-append-version="true" />



<div class="main-container">
    
    
    
    <div class="left-container">
        <div class="lfCamada1">
            
            <h5>Usuarios</h5>
                <div class="lfCamada2">
                   sdsada
                </div>
        </div>

        


    </div>

    <div class="center-container">
        <div class="TituloComunidades">
                <h3 class="textoCentral">Comunidades</h3>
            </div>
        <div class="NavbarContainer">
            <form class="d-flex" role="search">
                <input class="form-control me-2" id="searchInput" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>

            <button class="btn btn-primary" id="criarComunidade">Criar Comunidade</button> 
         </div> 
        <div class="containerCard">
            <div class="internalContainer">
                <div class="gridContainerFlow">
            
                    @foreach (var item in Model.getComunidades)
                                    {
                                        <div class="card">
                                            <img src="..." class="card-img">
                                                <div class="card-body">
                                                    <h5 class="card-title"></h5>
                                                    <p class="card-text">
                                                        <td>@item.nomeComunidade</td>
                                                    </p>
                                                    <a href="#" class="btn btn-primary">Visualizar</a>
                                                </div>
                                            </div>
                                
                                    }
                </div>            
            </div>                
            
        </div>
        
    </div>

    <div class="right-container">

        

        <div class="rhCamada1">
            <h5>Minhas Comunidades</h5>
            <div class="rhCamada2">
                <div class="minhasComunidades">
                    <div class="ComunidadesUsuario">
                        @foreach (var item in Model.getComunidadesUsuario)
                            {
                                <div class="cardMinhasComunidades">
                                    <img src="..." class="card-img">
                                    <td>@item.comunidade.nomeComunidade</td>

                                </div>
                            }
                    </div>    
                </div>
            </div>
        </div>

        
    </div>

</div>

<style>

    body{
        margin: 0;
        padding: 0;
    }        
    .container{
        margin: 0px;
        padding: 0px;
        
    }


.NavbarContainer{
    display: flex;
    justify-content: space-between;
    margin: 10px;
    padding: 10px;
}


::-webkit-scrollbar {
    width: 9px;
    background-color: #000000;
}

::-webkit-scrollbar-thumb {
    background-color: #2b356c;
    border-radius: 6px;
}

::-webkit-scrollbar-thumb:hover {
    background-color: #E3A5FF;
    border-radius: 6px;
}


.ComunidadesUsuario {

    overflow: auto; 
    max-height: 70vh;
    border-radius: 5px;
}

.cardMinhasComunidades{
    border: 1px solid white;
    text-align: center;
    padding: 5px;
    margin: 8px;
    border-radius: 5px;
    
}

.gridContainerFlow{
    max-height: 62vh;
    width: 100%;
    display: flex;
    gap: 10px;
    align-items: center;
    margin-left: 10px;
    overflow: auto; 
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    border-radius: 5px;
}

.internalContainer{
    background-color: #111738;
    max-height: 62vh;
    width: 95%;
    display: flex;
    gap: 10px;
    align-items: center;
    margin-left: 10px;
    border-radius: 5px;
    
}

.containerCard{
    margin: 10px;
    border-radius: 5px;
       
}

.card{
    width: 15vw;
    height: 25vh;
    background-color: transparent;
    border: 1px solid white;
    border-radius: 5px;
}

.rhCamada1{
    background-color: #232B58;
    height: 100%;
    margin: 10px;
    text-align: center;
    padding: 10px;
    border-radius: 5px;
}

.rhCamada2{
    background-color: #111738;
    height: 92%;
    margin: 5px;
    text-align: center;
    border-radius: 5px;
}



.lfCamada1{
    background-color: #232B58;
    height: 100%;
    margin: 10px;
    text-align: center;
    padding: 10px;
    border-radius: 5px;
}

.lfCamada2{
    background-color: #111738;
    height: 92%;
    margin: 5px;
    text-align: center;
    border-radius: 5px;
}

.main-container {
    
    height: 100%;
    width: 95vw;
    padding: 10px;
    margin: 30px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-inline: 20px;
    border: 1px solid white;
    color: white;
    text-align: center;
    border-radius: 5px;
    
}

.left-container {
    height: 100%;
    width: 16vw;
