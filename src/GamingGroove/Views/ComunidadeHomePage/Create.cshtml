@model GamingGroove.Models.ComunidadeModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/ComunidadeHomePageStyles/ComunidadeHomePageCreate.css" asp-append-version="true" />

<form class="main-container" asp-controller="ComunidadeHomePage" asp-action="Create" enctype="multipart/form-data">
    <div class="edit-container">        
        <div class="editProfile-container">
            <h2>Crie sua comunidade</h2>
            <div class="communityName-container">
                <label class="communityName">Escolha um nome para a sua comunidade:</label>
                <input asp-for="nomeComunidade"class="communityName-input"/>
            </div>     
            <div class="secondSection-container"> 
                <div class="favGames-container">              
                    <div class="imageInput-container">
                        <div>Selecione as imagens da sua comunidade:</div>
                        <div class="profileIcon-input-container">
                            <div class="profileImage-input">
                                <label class="imageInput" for="profileIcon-input"><img class="uploadIcon" src="~/images/icons/upload-icon.svg" alt="">Ícone</label>
                                <input asp-for="iconeComunidade" id="profileIcon-input" name="profileIcon-input" type="file" name="iconePerfilArquivo"/>
                                <span asp-validation-for="iconeComunidade" class="text-danger"></span>
                            </div>                        
                        </div>
                        <div class="profileCover-input-container">
                            <div class="profileImage-input">
                                <label class="imageInput" for="profileCover-input"><img  class="uploadIcon" src="~/images/icons/upload-icon.svg" alt="">Imagem</label>
                                <input asp-for="capaComunidade" id="profileCover-input" name="profileCover-input" type="file" name="capaPerfilArquivo"/>
                                <span asp-validation-for="capaComunidade" class="text-danger"></span>
                            </div>                        
                        </div>
                    </div>
                    <div class="favGames-label-container">
                        <div class="favGames-label">Selecione os três jogos que mais fazem <br> parte da sua comunidade:</div>
                        <div class="favGames-alert">@ViewBag.Message</div>
                    </div>
                    
                    <div class="form-group">
                        <select asp-for="primeiroJogo" class="form-control" asp-items="Html.GetEnumSelectList<JogosEnum>()"></select>
                    </div>
                    <div class="form-group">
                        <select asp-for="segundoJogo" class="form-control" asp-items="Html.GetEnumSelectList<JogosEnum>()"></select>
                    </div>
                    <div class="form-group">
                        <select asp-for="terceiroJogo" class="form-control" asp-items="Html.GetEnumSelectList<JogosEnum>()"></select>
                    </div>   
                </div>
                <div class="biography">
                    <div>Faça uma descrição da sua comunidade:</div>
                    <div class="form-group">
                        <textarea asp-for="descricaoComunidade" class="form-control bio-text" rows="10"></textarea>
                        <span asp-validation-for="descricaoComunidade" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="buttons-container">
                <button class="submit-button" href="~/ComunidadeHomePage">Cancelar</button>
                <button class="submit-button" value="Create" type="submit">Criar comunidade</button>
            </div>
        </div>
    </div>
</form>

