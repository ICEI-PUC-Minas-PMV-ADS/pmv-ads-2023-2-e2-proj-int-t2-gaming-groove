@model IEnumerable<GamingGroove.Models.ComentarioModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.textoComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.midiaComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataComentario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.usuario.usuarioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publicacao.publicacaoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.textoComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.midiaComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataComentario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.comentarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.comentarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.comentarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
