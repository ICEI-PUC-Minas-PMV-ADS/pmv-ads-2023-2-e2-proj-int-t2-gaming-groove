@model GamingGroove.Models.UsuarioModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GamingGroove Login</title>
    <link rel="icon" href="~/images/logos/gg-favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
</head>
<body>
    <main class="main-container">
        <div class="brand-container">
            <a href="~/HomePageLogin"><img class="logo" src="~/images/logos/gaminggroove-logo.png" alt="Logo da Gaming Groove"></a>
            <h2 class="slogan">Lorem ipsum dolor sit amet, consecteur adipiscing elit.</h2>
        </div>
        <div class="forms-container">
            <div class="controls">
                <a href="~/HomePageLogin"><button id="login">Entrar</button></a>
                <a href="~/HomePageCadastro"><button id="signup-acitve">Cadastrar</button></a>
            </div>            
            <div class="cards" id="card-back">
                <form class="card-back" id="signup-card" asp-controller="HomePageCadastro" asp-action="CriarConta">
                    <label class="access-title">Crie uma conta</label>
                    <div class="text-danger">@ViewBag.Message</div>
                    <div class="container-input">
                        <span asp-validation-for="nomeUsuario" class="text-danger"></span>    
                        <div class="form-group">
                            <img src="~/images/icons/homepage/user.svg" alt="">
                            <input asp-for="nomeUsuario" class="form-box" placeholder="Nome de Usuario">
                        </div> 
                    </div>
                    <div class="container-input">
                        <span asp-validation-for="nomeCompleto" class="text-danger"></span>
                        <div class="form-group">
                            <img src="~/images/icons/homepage/identification-card.svg" alt="">
                            <input asp-for="nomeCompleto" class="form-box" placeholder="Nome Completo">
                        </div>     
                    </div>
                    <div class="container-input">
                        <span asp-validation-for="dataNascimento" class="text-danger"></span> 
                        <div class="form-group">
                            <img src="~/images/icons/homepage/calendar-blank.svg" alt="">
                            <input asp-for="dataNascimento" class="form-box" placeholder="Data de Nascimento">
                        </div>    
                    </div>
                    <div class="container-input">
                        <div class="text-danger">@ViewBag.Message2</div>
                        <span asp-validation-for="email" class="text-danger"></span>                        
                        <div class="form-group">
                            <img src="~/images/icons/homepage/at.svg" alt="">
                            <input asp-for="email" class="form-box" placeholder="E-mail">
                        </div>     
                    </div>               
                    <div class="container-input">
                        <div class="text-danger">@ViewBag.PasswordMessage</div>
                        <span asp-validation-for="senha" class="text-danger"></span>                        
                        <div class="form-group">
                            <img src="~/images/icons/homepage/lock-key.svg" alt="">
                            <input type="password" asp-for="senha" class="form-box" placeholder="Senha">
                        </div>    
                    </div>                                                                                              
                    <button type="submit" form="signup-card">Criar conta</button>
                </form>
            </div>
        </div>
    </main>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/js/HomePage.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
